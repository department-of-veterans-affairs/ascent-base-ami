{
  "variables": {
    "aws_access_key": null,
    "aws_secret_key": null,
    "aws_region": null,
    "ami_version": "{{timestamp}}"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "{{user `aws_region`}}",
      "source_ami": "ami-1fbe067e",
      "instance_type": "t2.micro",
      "ssh_username": "ec2-user",
      "ssh_pty": true,
      "ami_name": "ascent-base-{{user `ami_version`}}",
      "launch_block_device_mappings": [
        {
          "device_name": "/dev/sda1",
          "volume_size": 10,
          "volume_type": "gp2",
          "delete_on_termination": true
        }
      ],
      "tags": {
        "Name": "vets-ascent",
        "Version": "{{user `ami_version`}}"
      },
      "snapshot_tags": 
      {
        "Name": "vets-ascent"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
          "sudo yum -y update"
      ]
    },
    {
      "type": "file",
      "source": "./monitor/",
      "destination": "/tmp"
    },
    {
      "type": "shell",
      "scripts": [
        "basic-packages.sh",
	      "setup_monitor.sh"
      ]
    }
  ]
}
